{% block search_html %}
<div class="row">
    <div class="columns">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'search_box outline'}}) }}
        {{ form_errors(form) }}
            <div class="row">
             <div class="row">
                <div class="large-3 columns">
                    {{ form_widget(form.ad_feed__user__email, {'attr': {'class':'form-control', 'placeholder': 'Email'|trans }}) }}
                    {{ form_widget(form.ad_feed__ad__id, {'attr': {'class':'form-control', 'placeholder': 'Ad id'|trans }}) }}
                    {{ form_widget(form.ad_feed__ref_site_id, {'attr': {'class':'form-control', 'placeholder': 'Status'|trans }}) }}
                </div>
                <div class="large-3 columns">
                    {{ form_widget(form.ad_feed__trans_id, {'attr': {'class':'form-control', 'placeholder': 'Trans ID'|trans }}) }}
                    {{ form_widget(form.ad_feed__unique_id, {'attr': {'class':'form-control', 'placeholder': 'Unique ID'|trans }}) }}
                    {{ form_widget(form.ad_feed__status, {'attr': {'class':'form-control', 'placeholder': 'Status'|trans }}) }}
                    {{ form_widget(form.ad_feed__ref_site_id, {'attr': {'class':'form-control', 'placeholder': 'Status'|trans }}) }}
                </div>
                <div class="large-6 columns">
                    {{ form_widget(form.search, {'attr': {'class':'small button mb0'}}) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}