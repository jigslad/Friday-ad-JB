{% block search_html %}
<div class="row">
      <div class="columns">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'outline'}}) }}
               {{ form_errors(form) }}

                <div class="row">
                    <div class="large-6 columns">
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Email address'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="large-6 columns">
                        {{ form_widget(form.ad_id, {'attr': {'placeholder': 'Adref'}}) }}
                        {{ form_errors(form.ad_id) }}
                    </div>
                </div>

                <div class="row">
                    <div class="large-6 columns">
                        {{ form_widget(form.include_messages, {'attr': {'class':'form-control'}}) }}
                        {{ form_label(form.include_messages) }}
                    </div>
                    <div class="large-6 columns">
                        {{ form_widget(form.include_ads, {'attr': {'class':'form-control'}}) }}
                        {{ form_label(form.include_ads) }}
                    </div>
                </div>
                
                <hr class="hr_margin">

                <div class="row">
                    <div class="large-12 columns">
                        {{ form_widget(form.search, {'attr': {'class':'small button'}}) }}
                        {{ form_widget(form.reset, {'attr': {'class':'small button'}}) }}
                    </div>
                </div>

            {{ form_end(form) }}
       </div>
  </div>
{% endblock %}

{% block search_script -%}
{{ include('FaCoreBundle:Default:blockJs.html.twig') }}
<script language="javascript" type="text/javascript">
//<![CDATA[
    $('#fa_police_report_reset').click(function(e){
        window.location.href = "{{ path('fa_report_police') }}";
    });
    {% if app.request.get('popup') %}
        window.print();
    {% endif %}

    $('#fa_police_report_email').keypress(function(e){
      $('#fa_police_report_ad_id').val('');
    });

    $('#fa_police_report_ad_id').keypress(function(e){
      $('#fa_police_report_email').val('');
    });

    $('#fa_police_report_email').click(function(e){
      $('#fa_police_report_ad_id').val('');
    });

    $('#fa_police_report_ad_id').click(function(e){
      $('#fa_police_report_email').val('');
    });
//]]>
</script>
{% endblock %}