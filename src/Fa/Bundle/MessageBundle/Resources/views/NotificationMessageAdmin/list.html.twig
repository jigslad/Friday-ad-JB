<div class="row">
     <div class="columns">
         <div class="outline">
             <p class="instruction">{{ 'Click on up and down arrow to sort result'|trans({}, 'messages') }}</p>
             <table class="table table-striped table-bordered table-hover">
                 <thead class="mb0">
                     <tr>
                         <th width="20%">
                            {{ sortable_link('notification_message_admin', 'notification_message__name', 'Name'|trans, sorter) }}
                         </th>
                         <th width="40%">
                            {{ 'Message'|trans({}, 'messages') }}
                         </th>
                         <th width="20%">
                            {{ 'Status'|trans({}, 'messages') }}
                         </th>
                         <th width="20%">
                            {{ 'Type'|trans }}
                        </th>
                         <th width="10%"><i class="fa fa-gear"></i> {{ 'Action'|trans({}, 'messages') }}</th>
                     </tr>
                 </thead>
                 <tbody>
                     {% if pagination.getNbResults() %}
                          {% for notificationMessage in pagination.getCurrentPageResults() %}
                          <tr class="gradeX">
                              <td>{{ notificationMessage.name }}</td>
                              <td>{{ notificationMessage.message }}</td>
                              <td>{{ statusArray[notificationMessage.status] }}</td>
                              <td>{{ notificationMessage.notification_type }}</td>
                              <td>
                                  <button href="#" data-dropdown="drop{{ notificationMessage.id }}" aria-controls="drop1" aria-expanded="false" class="small button dropdown tools_btn">Select</button>
                                  <br />
                                  <ul id="drop{{ notificationMessage.id }}" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
	                                  {% if notificationMessageEditGrant %}
	                                      <li><a href="{{ path('notification_message_edit_admin', {'id': notificationMessage.id}) }}"><i class="fi-pencil"></i> {{ 'Edit'|trans({}, 'messages') }}</a></li>
	                                  {% endif %}
                                  </ul>
                              </td>
                          </tr>
                          {% endfor %}
                     {% else %}
                          <tr class="odd gradeX">
                              <td colspan="4" align="center">{{ 'No record found'|trans({}, 'messages') }}</td>
                          </tr>
                     {% endif %}
                 </tbody>
             </table>
        </div>
    </div>
</div>