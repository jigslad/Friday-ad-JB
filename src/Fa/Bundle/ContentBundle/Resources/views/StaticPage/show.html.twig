{% extends 'FaFrontendBundle::layout.html.twig' %}

{% set container = fetch_container_instance() %}
{% set seoManager = container.get('fa.seo.manager') %}

{% block meta_robots %}
    {% if seoFields.meta_robots is defined %}
        {{seoFields.meta_robots}}
    {% endif %}
{% endblock %}

{% block page_title %}
    {% if seoFields.page_title is defined %}
        {{ seoManager.parseSeoString(seoFields.page_title, {'{location}': seoLocationName}) }}
    {% endif %}
{% endblock %}

{% block meta_description %}
    {% if seoFields.meta_description is defined %}
        {{ seoManager.parseSeoString(seoFields.meta_description, {'{location}': seoLocationName}) }}
    {% endif %}
{% endblock %}

{% block meta_keywords %}
    {% if seoFields.meta_keywords is defined %}
        {{ seoManager.parseSeoString(seoFields.meta_keywords, {'{location}': seoLocationName}) }}
    {% endif %}
{% endblock %}

{% block canonical_url %}
    {% if seoFields.canonical_url is defined %}
        {{seoFields.canonical_url}}
    {% else %}
        {{ app.request.uri|replace({('?'~app.request.queryString) : ''}) }}
    {% endif %}
{% endblock %}

{% block body %}
    <style>
        .simple-heading {
            margin: 48px 0;
            text-align: center;
        }
        .testimonial-main {
            background: #fff;
            padding: 35px 0;
        }
        .staticpage-graybox {
            background: #EAEFF0;
            border: 1px solid #CBD5D9;
            border-radius: 2px;
            padding: 30px 20px 0;
            min-height: 428px;
        }
        p {
            font-size: 14px;
            line-height: 22px;
            font-family: inherit;
            font-weight: normal;
            margin-bottom: 1.25rem;
            text-rendering: optimizeLegibility;
        }
        table {
            background: white;
            margin-bottom: 1.25rem;
            border: solid 1px #ddd;
            table-layout: auto;
        }
        table thead tr th, table tfoot tr th, table tfoot tr td, table tbody tr th, table tbody tr td, table tr td {
            display: table-cell;
            line-height: 1.125rem;
        }
        table tr th, table tr td {
            padding: .5625rem .625rem;
            font-size: .875rem;
            color: #222;
            text-align: left;
        }
    </style>
    <div class="container">
        {% if seoFields.h1_tag is defined %}
            <h1 class="s1 simple-heading text-center">{{ seoManager.parseSeoString(seoFields.h1_tag, {'{location}': seoLocationName}) }}</h1>
        {% endif %}
    </div>
    <div class="testimonial-main white-bg">
        <div class="container">
            <div class="banner-wrapper">
                <div class="left-banner">
                    {% set zoneId = constant('Fa\\Bundle\\ContentBundle\\Repository\\BannerZoneRepository::ZONE_MARGIN_LEFT') %}
                    {{ include('FaContentBundle:Banner:show.html.twig', {'zone_id': zoneId, 'otherParams':{'class':'d-none d-md-block'}}) }}
                </div>
                <div class="row">
                    <div class="col-md-17">
                        {{staticPage.getDescription()|raw}}
                    </div>
                    {% if staticPage.getAdditionalInfo() %}
                    <div class="col-md-7">
                        <div class="staticpage-graybox">
                            {{staticPage.getAdditionalInfo()|raw}}
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="right-banner">
                    {% set zoneId = constant('Fa\\Bundle\\ContentBundle\\Repository\\BannerZoneRepository::ZONE_MARGIN_RIGHT') %}
                    {{ include('FaContentBundle:Banner:show.html.twig', {'zone_id': zoneId, 'otherParams':{'class':'d-none d-md-block'}}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}