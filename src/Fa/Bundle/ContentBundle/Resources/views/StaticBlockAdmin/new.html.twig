{% extends 'FaAdminBundle::layout.html.twig' %}
{% form_theme form 'FaAdminBundle:Form:adminFields.html.twig' %}
{% block content %}
{{ include('FaAdminBundle:Default:addEditHeading.html.twig') }}

<div class="row">
    <div class="columns">
        <div class="panel">
            <p class="text-right"><span class="required">*</span> = mandatory fields</p>
            <div class="row">
                <div class="large-9 columns">
                    {{ form_start(form, {'attr': {'novalidate': ''}}) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.name) }}
                        {% if entity.getType() == constant('Fa\\Bundle\\ContentBundle\\Repository\\StaticPageRepository::STATIC_BLOCK_GA_CODE_ID') %}
                          {{ form_row(form.description, {'attr': {'rows': '15'}}) }}
                        {% else %}
                           {{ form_row(form.description, {'attr': {'rows': '15', 'class': 'tinymce'}}) }}
                        {% endif %}
                        
                        {{ form_row(form.status) }}
                        {{ form_row(form.type) }}
                        {{ include('FaAdminBundle:Default:saveButton.html.twig', {'cancelUrl': 'static_block_admin'}) }}
                    {{ form_end(form) }}
                </div>
                <div class="large-3 columns">
                    <b>{{ 'Variables available'|trans }}</b>
                    <div style="overflow: auto; height: 380px;">
                        {page_type}<br>
                        {user_type}<br>
                        {category}<br>
                        {class}<br>
                        {sub_class}<br>
                        {sub_sub_class}<br>
                        {user_location}<br>
                        {town}<br>
                        {county}<br>
                        {edition_area}<br>
                        {london_areas}<br>
                        {ad_published}<br>
                        {ad_location}<br>
                        {seller_contact_methods}<br>
                        {ad_price}<br>
                        {ad_id}<br>
                        {user_logged}<br>
                        {search_keyword}<br>
                        {hashed_email}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
{% endblock %}

{% block scriptbottom %}
    {{ include('FaContentBundle:Default:tinyMceJs.html.twig') }}
{% endblock %}