<div id="facebookLocation" class="reveal-modal tiny remove-item-modal" data-reveal>
    <a class="close-reveal-modal">&#215;</a>
    <h5 class="modal-title">
        {{'Want to Set Current Location?'|trans({}, 'frontend-paa-fourth-step')}}
    </h5>
    <div class="modal-content remove-modal">
        <div class="row">
            <div class="columns">
                'Would you like to continue with your Facebook Location : {{ app.session.get('fb_user_sesssion').user_location }}'
            </div>
        </div>
        <div class="mt20 remove-item-btn">
            <div class="row">
                <div class="large-12 columns">
                    <button type="button" class="button secondary-btn-4 thin-btn expand" onclick="removeFacebookLocation('#facebookLocation');">{{'No Thanks'|trans({}, 'frontend-paa-fourth-step')}}</button>
                </div>
                <div class="large-12 columns">
                    <button type="button" class="button secondary-btn-1 thin-btn expand" onclick="setFacebookLocationData('{{ app.session.get('fb_user_sesssion').user_location }}');">{{'Load Facebook Location'|trans({}, 'frontend-paa-fourth-step')}}</button>
                </div>
            </div>
        </div>
    </div>
</div>