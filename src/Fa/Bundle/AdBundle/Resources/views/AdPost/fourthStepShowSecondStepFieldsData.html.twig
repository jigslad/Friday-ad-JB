{% if ad.type.id is defined and ad.type.id %}
<div class="change-category">
    <div class="text-left cat-name-wrap">
        <span>{{ 'Advertised as'|trans({}, 'frontend-paa-fourth-step') }}:</span> {{ fa_entity_cache_manager.getEntityNameById('FaEntityBundle:Entity', ad.type.id) }}
    </div>
    <div class="text-right edit-category">
        <a href="javascript:submitFormUsingAjax('{{ path('ad_post_second_step', {'is_edit' : 1}) }}');" class="a-tag" title="{{ 'Change ad type'|trans({}, 'frontend-paa-fourth-step') }}">{{ 'Edit'|trans({}, 'frontend-paa-fourth-step') }}</a>
    </div>
</div>
{% endif %}
<div class="change-category">
    <div class="text-left cat-name-wrap">
        <span>{{ 'Ad title'|trans({}, 'frontend-paa-fourth-step') }}:</span> {{ ad.title }}
    </div>
    <div class="text-right edit-category">
        <a href="javascript:submitFormUsingAjax('{{ path('ad_post_second_step', {'is_edit' : 1}) }}');" class="a-tag" title="{{ 'Change ad title'|trans({}, 'frontend-paa-fourth-step') }}">{{ 'Edit'|trans({}, 'frontend-paa-fourth-step') }}</a>
    </div>
</div>
<div class="change-category">
    <div class="text-left cat-name-wrap d-flex">
        <span>{{ 'Description'|trans({}, 'frontend-paa-fourth-step') }}:</span>    
        <div id="paa_desc">{{ ad.description|raw }}</div>
    </div>
        <a href="javascript:void(0);" class="read-more" style="display:none;">{{ 'Read more'|trans({}, 'frontend') }}</a>
    	<a href="javascript:void(0);" class="read-less" style="display:none;">{{ 'Read less'|trans({}, 'frontend') }}</a>
    <div class="text-right edit-category">
        <a href="javascript:submitFormUsingAjax('{{ path('ad_post_second_step', {'is_edit' : 1}) }}');" class="a-tag" title="{{ 'Change description'|trans({}, 'frontend-paa-fourth-step') }}">{{ 'Edit'|trans({}, 'frontend-paa-fourth-step') }}</a>
    </div>
</div>
{% if ad.price is defined and ad.price %}
<div class="change-category">
    <div class="text-left cat-name-wrap">
        <span>{{ 'Sale price'|trans({}, 'frontend-paa-fourth-step') }}:</span>
        {% if ad.type.id is defined and ad.type.id == constant('Fa\\Bundle\\EntityBundle\\Repository\\EntityRepository::AD_TYPE_SWAPPING_ID') %}
            {{ ad.priceText}}
        {% else %}
            &pound;{{ ad.price}}
        {% endif %}
    </div>
    <div class="text-right edit-category">
        <a href="javascript:submitFormUsingAjax('{{ path('ad_post_second_step', {'is_edit' : 1}) }}');" class="a-tag" title="{{ 'Change price'|trans({}, 'frontend-paa-fourth-step') }}">{{ 'Edit'|trans({}, 'frontend-paa-fourth-step') }}</a>
    </div>
</div>
{% endif %}