    <div class="text-left cat-name-wrap">
        <span>{{ 'Category'|trans({}, 'frontend-paa-fourth-step') }}:</span>
        {% set categoryId = ad.category.id %}
        {{ fetch_repository('FaEntityBundle:Category').getCategoryPathArrayById(categoryId, false, fetch_container_instance())|last('<span class="seperator"></span>')|raw }}
    </div>

    <div class="text-right edit-category">
        <a href="javascript:submitFormUsingAjax('{{ path('ad_post_first_step', {'is_edit' : 1}) }}');" class="a-tag" title="{{ 'Change category'|trans({}, 'frontend-paa-fourth-step') }}">{{ 'Edit'|trans({}, 'frontend-paa-fourth-step') }}</a>
    </div>
