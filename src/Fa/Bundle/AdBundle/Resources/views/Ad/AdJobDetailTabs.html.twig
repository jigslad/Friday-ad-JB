<div class="detail-tabpart-2" id="vif_tabs">
	<nav>
		<div class="nav nav-tabs nav-fill custom-tabs" id="ad_jobs_tabs" role="tablist">
            {% if additionalJobReqIds|length or additionalJobBenefitIds|length %}
                <a href="#basic_info_panel"  id="basic_info_panel_tab" aria-controls="nav-basic" class="nav-item nav-link active" data-toggle="tab" role="tab" aria-selected="true">{{'The basics'|trans({}, 'frontend-show-ad')}}</a></li>
            	<a href="#more_details_panel"  id="more_details_panel_tab" aria-controls="nav-more-details" class="nav-item nav-link" data-toggle="tab" role="tab" aria-selected="true">{{'More details'|trans({}, 'frontend-show-ad')}}</a></li>
            {% endif %}
		</div>
	</nav>
    <div class="tab-content">
        {% if additionalJobReqIds|length or additionalJobBenefitIds|length %}
		<div class="tab-pane fade show active" id="basic_info_panel" role="tabpanel" aria-labelledby="nav-basic">
            <a href="#basic_info_panel" id="basic_info_panel_anchor" class="d-block d-md-none">{{'The basics'|trans({}, 'frontend-show-ad')}} <i class="fi-plus right"></i></a>
            {% if adJobDetail['description'] is defined %}
                    <div id="ad_desc">
                        <p>{{adJobDetail['description']|replace({"\\n": "<br />", "&nbsp;": " "})|raw|nl2br }}</p>
                    </div>
                    <a href="javascript:void(0);" class="read-more" style="display:none;">{{ 'Read more'|trans({}, 'frontend-preview-ad') }}</a>
                    <a href="javascript:void(0);" class="read-less" style="display:none;">{{ 'Read less'|trans({}, 'frontend-preview-ad') }}</a>
            {% endif %}
            {% if adDetailAndDimensionFields['detail'] is defined %}
                <ul class="details-info clearfix">
                    {% for fieldName, fieldValue in adDetailAndDimensionFields['detail'] %}
                        <li>
                            <div class="detail-text">{{fieldName}}</div>
                            <div class="detail-text">{{fieldValue|join(', ')|raw}}</div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        {% endif %}
        
        {% if additionalJobReqIds|length or additionalJobReqIds|length %}
        <div class="tab-pane fade" id="more_details_panel" role="tabpanel" aria-labelledby="nav-more-details">  
            <a href="#more_details_panel" class="d-block d-md-none" id="more_details_panel_tab">{{'More details'|trans({}, 'frontend-show-ad')}}<i class="fi-plus right"></i></a>
            {% if additionalJobReqIds|length %}
                <h5 class="safety-title">{{'Additional job requirements'|trans({}, 'frontend-show-ad')}}</h5>
                <div class="safety-features">
                    <ul class="details-info clearfix">
                        {% for additionalJobReqId in additionalJobReqIds %}
                            <li>
                                <div class="detail-text">{{ entityCacheManager.getEntityNameById('FaEntityBundle:Entity', additionalJobReqId) }}</div>
                                <div class="detail-text text-center"><span class="safety-fe-check"></span></div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            
            {% if additionalJobBenefitIds|length %}
                <h5 class="safety-title">{{'Additional benefits'|trans({}, 'frontend-show-ad')}}</h5>
                <div class="safety-features">
                    <ul class="details-info clearfix">
                        {% for additionalJobBenefitId in additionalJobBenefitIds %}
                            <li>
                                <div class="detail-text">{{ entityCacheManager.getEntityNameById('FaEntityBundle:Entity', additionalJobBenefitId) }}</div>
                                <div class="detail-text text-center"><span class="safety-fe-check"></span></div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %} 
        </div>                  
        {% endif %}
        
     </div>
</div>
