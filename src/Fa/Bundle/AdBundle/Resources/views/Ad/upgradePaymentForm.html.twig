 {% form_theme form 'FaFrontendBundle:Form:fields.html.twig' %}
 <div id="post-all-errors"></div> 
<div>
    <div id="card_detail">
            
        <div class="small-wrapper">
            <div class="paa-bdr-box bdr-none">
                <h3 class="text-center">{{'Billing details'|trans({},'frontend-cyber-source')}}</h3>
                
                <div class="payment-row first-row">
                    {{ form_label(form.street_address) }}
                    {{ form_widget(form.street_address, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.street_address) }}
                </div>
                
                <div class="payment-row">
                    {{ form_label(form.zip) }}
                    <div class="postcode clearfix d-flex">
                        <div class="col-15 pr0">{{ form_widget(form.zip) }}</div>
                        <div class="col-9 pr0"><button type="button" class="btn secondary-btn-1 right btn-block" onclick="return getUserAddress();">{{'Find address'|trans({},'frontend-cyber-source')}}</button></div>
                    </div>
                    <small id="zip_error_div" class="error" style="display:none"></small>
                    <span id="form_zip_error">{{ form_errors(form.zip) }}</span>
                </div>
                
                <div class="payment-row">
                    {{ form_label(form.street_address_2) }}
                    {{ form_widget(form.street_address_2, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.street_address_2) }}
                </div>
                
                <div class="payment-row">
                    {{ form_label(form.town) }}
                    {{ form_widget(form.town, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.town) }}
                </div>
                
                <div class="payment-row">
                    {{ form_label(form.county) }}
                    {{ form_widget(form.county, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.county) }}
                </div>
               </div>
           </div>
            
            
            <div class="small-wrapper">
                <h3 class="text-center mb20 mb20">Card details</h3>
                <div class="payment-cards m-auto">&nbsp;</div>

                <div class="payment-row">
                    {{ form_label(form.card_holder_name) }}
                    {{ form_widget(form.card_holder_name, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.card_holder_name) }}
                </div>
                
                <div class="payment-row card-num">
                    {{ form_label(form.card_number) }}
                    {{ form_widget(form.card_number, {'attr': {'class': 'white-field'}}) }}
                    {{ form_errors(form.card_number) }}
                </div>
                
                <div class="payment-row white-select">
                    {{ form_label(form.card_expity_month) }}
                    <div class="expiry-date d-flex mb20" >
                        <div class="col-6 pl0">{{ form_widget(form.card_expity_month, {'attr': {'class': 'select-control'}}) }}</div>
                        <div class="col-6 pl0">
                         {{ form_widget(form.card_expity_year, {'attr': {'class': 'select-control'}}) }}
                         </div>
                    </div>
                    {{ form_errors(form.card_expity_month) }}
                    {{ form_errors(form.card_expity_year) }}
                </div>
                
                <div class="payment-row security-code">
                    {{ form_label(form.card_security_code) }}
                    {{ form_widget(form.card_security_code, {'attr': {'class': 'white-field'}}) }}
                    <div class="sec-code-icon">{{'Security code'|trans({},'frontend-cyber-source')}}</div>
                    {{ form_errors(form.card_security_code) }}
                </div>
               
           </div>
       </div>
</div>