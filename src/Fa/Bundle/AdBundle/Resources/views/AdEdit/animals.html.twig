{% extends 'FaFrontendBundle::layout.html.twig' %}
{% form_theme form 'FaFrontendBundle:Form:fields.html.twig' %}

{% block title %}
    {{'Edit ad'|trans({}, 'frontend-ad-edit')}}
{% endblock %}

{% set container = fetch_container_instance() %}
{% set categoryId = ad.category.id %}
{% set categoryName = 'Animals' %}

{% use "FaAdBundle:AdImage:showImageUploader.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    {{ block('imageUploadStylesheets') }}
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('build/css/dashboard.css') }}"/>
{% endblock %}

{% use "FaCoreBundle:GoogleMap:renderLocationUsingCircle.html.twig" %}

{% block body -%}
<style>
.select2-container.custom_select { width:100% !important; }
.custom_select_options.select2-drop.select2-with-searchbox { min-width:300px !important; }
</style>
    <div class="dash-block">
        <div class="posting-bg">
            <div class="container">
                {{ include('FaUserBundle:Default:leftCanvasMenuLink.html.twig') }}
                <div class="row d-board-main">
                    <div class="off-canvas-wrap" data-offcanvas>
                        <div class="inner-wrap">
                            {{ include('FaUserBundle:Default:userLeftMenu.html.twig') }}
                            <div id="db-right-part" class="col-md-19 d-right-col">
                                <div id="middle-column">
                                    <div><a href="{{ path('manage_my_ads_active') }}" class="backto-my-items" title="{{ 'Back to Manage my ads'|trans({}, 'frontend-ad-edit') }}">{{ 'Back to Manage my ads'|trans({}, 'frontend-ad-edit') }}</a></div>
                                    <div class="col-md-24 d-flex justify-content-center mb30">
                                        <h1 class="s-h1 paa-title col-md-24 col-lg-18 text-center">{{ 'Edit your ad'|trans({}, 'frontend-ad-edit') }}</h1>
                                    </div>
                                    <div class="change-category mt30">
                                        <div class="cat-name-wrap">
                                            <span>{{ 'Category'|trans({}, 'frontend-ad-edit') }}:</span>
                                            {{ fetch_repository('FaEntityBundle:Category').getCategoryPathArrayById(categoryId, false, fetch_container_instance())|last('<span class="seperator"></span>')|raw }}
                                        </div>
                                    </div>
                                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                            {{ form_errors(form) }}
                                            {% set orderedFields = form.paa_ordered_fields.vars.value|split(',') %}
                                            {% if orderedFields|length  > 0 %}
                                                {{ include('FaAdBundle:AdEdit:animalsFields.html.twig') }}
                                            {% endif %}
                                            <div class="small-wrapper">
                                                {{ form_widget(form.save, {'attr': {'class':'primary-btn-1 btn btn-block next-btn'}}) }}
                                            </div>
                                        {{ form_end(form) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

