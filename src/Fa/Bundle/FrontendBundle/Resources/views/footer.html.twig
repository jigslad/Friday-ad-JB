{% set container = fetch_container_instance() %}
{% block stylesheets %}
   {# {% stylesheets filter="scssphp" output="bundles/css/compiled/fad-scss-footer.css"
        "bundles/fafrontend/scss/footer.scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
