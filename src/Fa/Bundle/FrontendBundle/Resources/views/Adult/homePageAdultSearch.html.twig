{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'fa_top_search'}}) }}
    {{ form_errors(form) }}
    <div class="home-slider-content adul-hp-slider">
        <div class="row">
            <div class="columns">
                <div class="relative">
                    <div class="row top-msg">
                        <div class="columns">
                           {{ include('FaCoreBundle::message.html.twig') }}
                        </div>
                    </div>
                    <div class="tagline"><h1 class="adul-tagline-text">What are you looking for?</h1></div>
                    <div id="home-search" class="large-14 columns">
                        <div class="adult-search">
			                <div class="search-input-box">
                            <table>
                                <tr>
                                    <td class="all-cat-select" style="display:none">{{ form_widget(attribute(form, 'item__category_id'), {'attr': {'class':'find-all custom_select' }}) }}</td>
                                    <td class="looking-for relative">
                                        {{ form_widget(attribute(form, 'keywords'), {'attr': {'class':'white-field mb0','placeholder':'Looking for...' }}) }}                                        
				                        <a href="javascript:void(0);" rel="nofollow" id="fa_top_search_keywords_close" class="ui-autocomplete-close select2-search-choice-close">Close</a>
                                    </td>
                                    <td class="search-btn"><button class="button secondary-btn-1 mb0 expand" id="adul-top-srch-btn" type="submit">{{'Search'|trans({}, 'frontend-homepage')}}</button></td>
                                </tr>
                            </table>
                            </div>
                            <div class="advanced-search-option"><a onclick="showHideAdvanceSearch()" class="adult-color homepage-advance-srch">Advanced</a></div>
                        </div>
                        <div id="header_search_editable_location_reveal_modal" class="reveal-modal tiny" data-reveal>
                            {{ include('FaCoreBundle:Default:invalidLocationModal.html.twig', {'modalId': 'header_search_editable_location_reveal_modal'}) }}
                        </div>
                        <div class="adult-loc-search location">
                            <span class="search-pin"></span>
                            <span id="in_text_span">{{ 'in'|trans({}, 'frontend-homepage') }}</span> <span id="header_search_editable_location_span">United Kingdom</span>
                            <a href="javascript:void(0)" rel="nofollow" id="header_search_editable_location_a" class="ahp-chg-under-loc"> ({{ 'change'|trans({}, 'frontend-homepage') }})</a>
                            <div id="top_search_location" class="white-autocomplete">
                                {{ form_widget(form.item__location_autocomplete) }}
                                <a href="javascript:void(0);" rel="nofollow" id="fa_top_search_item__location_close" class="ui-autocomplete-close select2-search-choice-close"></a>
                                <div class="clearfix">
                                    <button class="button xs-btn-1 expand left" type="button" id="top_search_location_homepage_ok">{{ 'Ok'|trans({}, 'frontend-homepage') }}</button>
                                    <button class="button xs-btn-1 expand right" type="button" id="top_search_location_cancel">{{ 'Cancel'|trans({}, 'frontend-homepage') }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="forsale-phone"></div>
                </div>
            </div>
        </div>
