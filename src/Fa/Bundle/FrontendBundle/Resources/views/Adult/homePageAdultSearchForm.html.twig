                                    <input type="checkbox" id="fa_adult_home_page_search_item_adult__independent_or_agency_id_1" class="independent-or-agency-cls checkbox" name="fa_adult_home_page_search[item_adult__independent_or_agency_id][]" required="required" value="7318">                                
                                    <label for="fa_adult_home_page_search_item_adult__independent_or_agency_id_1" class="required radio-label"></label>Agency
                                </div>
                        </div>
                        <div class="col-md-7 col-lg-7 mobile-p-0 d-inline-flex">
                            {{ form_widget(attribute(form, 'item_adult__ethnicity_id'),{'attr':{ 'class': 'form-control select-control without-sel-box'  }}) }}
                        </div>
                    </div>
                </div>
            </div>
            </div>

            <div class="col-md-8 m-auto">
                <button class="adv-srch-form-btn btn-block button mb0 mt20" id="adul-hp-adv-srch" type="submit">{{ 'Search'|trans({}, 'frontend-left-search') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
