<div class="adul-search-form choose-cat-block" style="background: #313133; padding: 15px 0 40px;">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}
        <div class="container">
            <div class="row">
            <div class="col-md-24">
                <div class="browse-by-category mt20">Choose by category</div>
                <div class="row">
                    <div class="col-md-11 col-lg-12 mobile-p-0">
                        {{ form_widget(attribute(form, 'item__category_id'),{'attr':{ 'class': 'form-control select-control without-sel-box'  }}) }}
                    </div>
                    <div class="col-sm-9 col-md-7 col-lg-7 mobile-p-0">
                        {{ form_widget(form.item__distance,{'attr':{'class':'form-control select-control without-sel-box'}}) }}
