        if ($("#sticky_nav").hasClass('fixed')) {
            $("#sticky_nav_top").addClass('fixed');
            $("#sticky_nav_top").addClass('top-bar-shadow');
        } else {
            $("#sticky_nav_top").removeClass('fixed');
            $("#sticky_nav_top").removeClass('top-bar-shadow');
