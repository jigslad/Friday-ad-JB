            $.ajax({
                type: "post",
                dataType: "json",
                url: "{{ path('fa_frontend_ajax_user_location') }}",
                data: {'location': searchLocation, 'catId' : catId},
                success: function(data) {
                    if (!$.isEmptyObject(data)) {
