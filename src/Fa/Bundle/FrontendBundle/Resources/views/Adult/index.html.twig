        var selectedCategory = $("#fa_adult_home_page_search_item__category_id");
        selectedCategory.change(function(){
            if($(this).val() == 3413){
                $("#more_options").css("display", "block");
                loadEthnicityByCategoryId($(this).val());
                loadServicesByCategoryId($(this).val());
            }
