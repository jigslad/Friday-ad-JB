                CategoryId = selectedCategory.val();
            }s
            $('#fa_adult_home_page_search_item_adult__ethnicity_id').empty();
            $('#fa_adult_home_page_search_item_adult__ethnicity_id').html('<option value="">{{ 'Any Ethnicity'|trans({}, 'frontend-landing-page') }}</option>');
