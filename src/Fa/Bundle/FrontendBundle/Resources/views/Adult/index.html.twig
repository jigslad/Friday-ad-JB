        function loadServicesByCategoryId(CategoryId) {
            $('#fa_adult_home_page_search_item_adult__services_id').val();
            if (!CategoryId) {
                CategoryId = selectedCategory.val();
            }

            $('#fa_adult_home_page_search_item_adult__services_id').html('<option value="">{{ 'Any Services'|trans({}, 'frontend-landing-page') }}</option>');
            if (CategoryId) {
                var data = {
                    id: CategoryId
