                        if (data.length > 0) {
                            $.each(data, function(id, value) {console.log(id,value)});
                            for (var i=0, total = data.length; i < total; i++) {
                                $('#fa_adult_home_page_search_item_adult__ethnicity_id').append('<option value="' + data[i].id + '">' + data[i].text + '</option>');
                            }
