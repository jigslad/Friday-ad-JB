<div class="blog-block large-17 columns">
    {% for externalSiteBlogDetail in externalSiteBlogDetails %}
        <div class="blog-item-block" data-equalizer-watch>
        	<div class="blog-item">
            	<div class="list-img"><img src="{{ externalSiteBlogDetail['mediaUrl'] }}"></div>
            	<div class="list-title columns">{{ externalSiteBlogDetail['title'] }}</div>
            	<div class="list-author-pub-date columns">by {{ externalSiteBlogDetail['author'] }} - {{ externalSiteBlogDetail['publishdate']|date("d F Y") }}</div>
            	{# <div class="list-desc">{{ externalSiteBlogDetail['desc'] }}</div> #}
        	</div>
        	<div class="blog-button"><button class="primary-btn-1 button">{{ externalSiteBlogDetail['buttonLabel'] }}</button></div>
        </div>
    {% endfor %}
</div>