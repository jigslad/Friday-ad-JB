                    <div class="main-navigation__block">
                        <div class="brand">
                            <a href="{{ path('fa_new_adult_homepage') }}" class="logo">
                                <img src="{{ asset_url('fafrontend/images/Fad-Adult-logo.svg') }}" alt="{{ 'Friday-Ad'|trans({}, 'frontend') }}" />
                            </a>
                        </div>
                        <nav class="main-menu">
                            {{ include('FaFrontendBundle:Adult:renderHeaderCategoriesNew.html.twig', {'totalUnreadMsg': totalUnreadMsg, 'headerCategories': headerCategories}) }}
                        </nav>
                    </div>
                    <div class="search-sticky search-sticky-mobile">
                        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
                        <div class="toggle-topbar menu-icon" id="mobile_menu_li">
                            <a href="javascript:void(0);">
                                <span class="menu" id="top_bar_nav_menu_span"></span>
                            </a>
                        </div>
                        <div class="show-for-small-only search-icon" id="mobile_search_li">
                            <a href="javascript:void(0)" class="search">Search</a>
                        </div>
                        <input type="text" class="search-sticky__input" value="" placeholder="What are you lookng for?" id="mobile_search_li">
                    </div>
                </div>
            </div>
            <div class="dropdown-bg"></div>
        </div>
    </div>
    <!--Main navigation END-->
</header>
