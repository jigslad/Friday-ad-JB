{% set bigImageRoute = "ajax_get_big_user_site_banner_image" %}
{% set userSiteBannerUrl = staticCall('Fa\\Bundle\\CoreBundle\\Manager\\CommonManager', 'getUserSiteBannerUrl', [fetch_container_instance(), userSiteObj.getId(), 1]) %}
{% if fromProfilePage is defined and fromProfilePage %}
    <img id="user_site_banner_img" class="img-fluid" src="{{ userSiteBannerUrl }}?{{ random(1000) }}" />
{% else %}
    <div class="profile-banner">
        <img id="user_site_banner_img" class="img-fluid" src="{{ userSiteBannerUrl }}?{{ random(1000) }}" />
        <div class="edit-pro-banner">
            <div class="clearfix">
                <div class="edit-pro-btns">
                    <a class="secondary-btn-1 thin-btn btn edit-banner-btn" href="javascript:void(0);" onclick="return getUserSiteBannerOriginalImage('{{ path(bigImageRoute, {'userSiteId': userSiteObj.getId()}) }}', true);" id="edit_banner_btn">{{'Edit'|trans({}, 'frontend-my-profile')}}</a>
                    <a class="secondary-btn-1 thin-btn btn change-banner-btn" data-toggle="modal" data-target="#shopBannerModal">{{'Change image'|trans({}, 'frontend-my-profile')}}</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="d-block d-md-none text-right mt10"><a class="primary-btn-3 btn thin-btn mb0"  data-toggle="modal" data-target="#shopBannerModal">{{'Change image'|trans({}, 'frontend-my-profile')}}</a></div>
{% endif %}