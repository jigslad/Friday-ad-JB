{% block search_html %}
<div class="row">
    <div class="columns">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'outline'}}) }}
        {{ form_errors(form) }}
            <div class="row">
               <div class="large-4 columns">
                   {{ form_widget(form.testimonials__user, {'attr': {'class':'form-control', 'placeholder': 'User id'|trans }}) }}
               </div>
               <div class="large-4 columns">
                    {{ form_widget(form.testimonials__user_name, {'attr': {'class':'form-control', 'placeholder': 'User name'|trans }}) }}
                </div>
                <div class="large-4 columns">
                    {{ form_widget(form.testimonials__user_email, {'attr': {'class':'form-control', 'placeholder': 'User email'|trans }}) }}
                </div>
            </div>

            <hr class="hr_margin">

            <div class="search_box">
                <div class="row">
                    <div class="large-6 columns">
                        {{ form_widget(form.testimonials__status, {'attr': {'class':'form-control' }}) }}
                    </div>
                    <div class="large-6 columns">
                        {{ form_widget(form.search, {'attr': {'class':'small button'}}) }}
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}