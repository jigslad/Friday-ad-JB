<div class="own-item search-alert-block" id="saved_search_{{ searchAgent.id }}">
    <div class="media">
        <div class="col-md-15 col-lg-17 l-block">
            <div class="my-msg-heading">
                <h3 id="saved_search_title_{{searchAgent.id}}_desktop" class="s-h3 mb5">{{ searchAgent.name }}</h3>
            </div>
            <div class="my-msg-desc">
                <div class="list-dimensions">
                    {% set searchParams = {} %}
                    {% set searchAgentCriteria = array_unserialize(searchAgent.criteria) %}
                    {% if searchAgentCriteria['search'] is defined %}
                        {% set searchParams = searchParams|merge(searchAgentCriteria['search']) %}
                    {% endif %}
                    {% if searchAgentCriteria['sorter'] is defined %}
                        {% set searchParams = searchParams|merge(searchAgentCriteria['sorter']) %}
                    {% endif %}

                    {% set searchResultUrl = container.get('fa_ad.manager.ad_routing').getListingUrl(searchParams) %}
                    {% set displayCriteriaArray = userSearchAgentRepository.getSearchAgentDisplayCriteriaArray(searchParams, container) %}

                    {% for displayCriteria in displayCriteriaArray %}
                        <span>{{ displayCriteria }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-9 col-lg-7 r-block">
            {% if guid is not defined %}
                <div class="group-m-btn">
                    <span class="ad-edit">
                        <a class="secondary-btn-2 btn thin-btn edit-btn h-width" href="javascript:void(0)" onclick="renameSavedSearchConfirmation('{{searchAgent.id}}');">
                            <span class="edit-icon"></span>
                            {{'Rename'|trans({}, 'frontend-my-saved-searches')}}
                        </a>
                    </span>
                    <span class="ad-remove float-right">
                        <a class="secondary-btn-2 btn thin-btn last-btn delete-btn f-width" href="javascript:void(0);" onclick="removeSavedSearchConfirmation('{{searchAgent.id}}');">
                            <span class="delete-icon"></span>
                            {{'Remove'|trans({}, 'frontend-my-saved-searches')}}
                        </a>
                    </span>
                </div>
            {% endif %}
            <div class="group-m-btn">
                <a href="{{ searchResultUrl }}" class="secondary-btn-1 thin-btn btn btn-block">{{'Search now'|trans({}, 'frontend-my-saved-searches')}}</a>
            </div>
            <div class="label-inline">
                <ul>
                    <li class="grey-check">
                        <input class="checkbox" type="checkbox" name="emailAlert_{{ searchAgent.id }}" id="emailAlert_{{ searchAgent.id }}" onclick="return updateSavedSearchAgent({{ searchAgent.id }});" value="1" {% if searchAgent.is_email_alerts %} checked="checked" {% endif %} />
                        <label for="emailAlert_{{ searchAgent.id }}"></label>{{'Send me email alerts'|trans({}, 'frontend-my-saved-searches')}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>