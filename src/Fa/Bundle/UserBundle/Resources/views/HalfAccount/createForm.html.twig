{% form_theme form 'FaFrontendBundle:Form:fields.html.twig' %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'outline'}}) }}
{{ form_errors(form) }}
<div class="mt20">
    {{ form_row(form.first_name) }}
    {{ form_row(form.email) }}
    <div id="form_create_alert_email_alert">
    	<div class="alert-flex grey-check">
        {{ form_widget(form.email_alert, {'attr':{'class':'checkbox'}}) }}
        <label for="{{ form.email_alert.vars.id  }}"></label>
        <span class="label-span">{{ form.email_alert.vars.label }}</span>
        </div>
    </div>
    <div id="form_create_alert_third_partyemail_alert">
    	<div class="alert-flex grey-check">
        {{ form_widget(form.third_party_email_alert, {'attr':{'class':'checkbox'}}) }}
        <label for="{{ form.third_party_email_alert.vars.id  }}"></label>
        <span class="label-span">{{ form.third_party_email_alert.vars.label }}</span>
        </div>
    </div>
</div>
{{ form_widget(form.save, {'attr': {'class': 'secondary-btn-1 button mb0 mt10 btn-block text-center'}}) }}
{{ form_end(form) }}

