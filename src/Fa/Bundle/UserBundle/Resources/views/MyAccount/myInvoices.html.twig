<div class="db-list">
    <a class="panel-heading collapsed" data-toggle="collapse" data-target="#panel7b">
        <div class="media section-head">
            <div class="media-body">
                <span class="invoices-icon list-icon-text">{{ 'Invoices'|trans({}, 'frontend-user-invoices') }}</span>
            </div>
            <div class="arrow-block">
                <i class="fa fa-chevron-up"></i>
                <i class="fa fa-chevron-down"></i>
            </div>
        </div>
    </a>
    <div class="collapse collapse-body-content" id="panel7b">
        <div>

        {% if invoiceMonths|length %}
            <div class="form-group d-inline-flex col-sm-13 col-md-13 col-lg-9 pad-none">
                <label class="mt10 mr20 select-month-label">{{ 'Select month'|trans({}, 'frontend-user-invoices') }}:</label>
                <select class="form-control" name="invoice_month_year" id="invoice_month_year" onchange="loadInvoices(this.value)">
                    {% for invoiceValue, invoiceName in invoiceMonths %}
                        <option value="{{ invoiceValue }}"> {{ invoiceName }}</option>
                    {% endfor %}
                </select>
            </div>
            <div id="invoices_item_div">
                {{ include('FaUserBundle:MyAccount:listInvoice.html.twig') }}
            </div>
        {% else %}
            <div class="mb20 d-none d-md-block">{{ 'No invoices found'|trans({}, 'frontend-user-invoices') }}</div>
        {% endif %}
        </div>
    </div>
</div>