<div class="row address-block equal">
    {% if userAddresses|length %}
        {% for userAddressId, userAddress in userAddresses%}
            <div class="col-md-12 col-lg-8 mt20 equal">
                <div class="myacc-address-box card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {% if userAddress['first_name'] is defined and userAddress['first_name']|trim|length %}
                                {{ userAddress['first_name'] }}
                            {% else %}
                                {{app.user.getFullName()}}
                            {% endif %}
                        </h5>
                        <p>
                        {% if userAddress['street_address'] is defined and userAddress['street_address']|trim|length %}
                            {{ userAddress['street_address'] }}<br />
                        {% endif %}
                        {% if userAddress['domicile_name'] is defined and userAddress['domicile_name']|trim|length %}
                            {{ userAddress['domicile_name'] }}<br />
                        {% endif %}
                        {% if userAddress['town_name'] is defined and userAddress['town_name']|trim|length %}
                            {{ userAddress['town_name'] }}{% if userAddress['zip'] %}, {{ userAddress['zip'] }}{% endif %}
                            <br />
                        {% endif %}
                        {% if userAddress['country_name'] is defined and userAddress['country_name']|trim|length %}
                            {{ userAddress['country_name'] }}
                        {% endif %}
                    </p>
                        <div class="row mb10 ml0 col pad-none">                           
                            <div class="h-width">
                                <a href="javascript:void(0)" onclick="javascript:editAddressBook('{{ userAddressId }}')" class="secondary-btn-2 btn thin-btn btn-block mr5"><span class="edit-icon"></span>{{ 'Edit'|trans({}, 'frontend-user-address-book') }}</a>
                            </div>
                            <div class="h-width">
                                <a href="javascript:void(0)" class="ml5 secondary-btn-2 btn thin-btn btn-block" onclick="javascript:confirmDeleteAddress('{{ userAddressId }}');"><span class="delete-icon"></span>{{ 'Remove'|trans({}, 'frontend-user-address-book') }}</a>
                            </div>                            
                        </div>
                        <div class="label-inline mt20 grey-radio">
                            <input class="checkbox" type="radio" onchange="updateInvoiceAddress({{ userAddressId }});" name="is_invoice_address" id="is_invoice_address_{{ userAddressId }}" {% if userAddress['is_invoice_address']%}checked="checked"{% endif%} value="{{ userAddressId }}">
                            <label for="is_invoice_address_{{ userAddressId }}"></label>{{ 'Invoice address'|trans({}, 'frontend-user-address-book') }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    <div class="col-md-12 col-lg-8 mt20">
        <div class="{% if userAddresses|length is not divisible by(3) %} address-btn {% endif %}">
            <button class="secondary-btn-1 btn btn-block mb0" onclick="javascript:addNewAddressBook();" type="button" data-toggle="modal" data-target="#addressBookModal">{{ 'Add an address'|trans({}, 'frontend-user-address-book') }}</button>
        </div>
    </div>
</div>
