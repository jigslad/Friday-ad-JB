  <div class="row">
     <div class="col-lg-12">
         <div class="panel panel-default">
             <div class="panel-heading text-right">
                 Click on up and down arrow to sort result
             </div>
             <!-- /.panel-heading -->
             <div class="panel-body">
                 <div class="table-responsive">
                     <table class="table table-striped table-bordered table-hover">
                         <thead>
                             <tr class="field-heading">
                                 <th width="50%">Name
                                     {#<a href="{{ path('_role', {'field': 'name', 'sort': 'asc'}) }}" {% if 'name' == sorter.field and 'asc' == sorter.sort %}class="active"{% endif %}><i class="fa fa-lg fa-caret-up"></i></a>
                                     <a href="{{ path('_role', {'field': 'name', 'sort': 'desc'}) }}" {% if 'name' == sorter.field and 'desc' == sorter.sort %}class="active"{% endif %}><i class="fa fa-lg fa-caret-down"></i></a>#}
                                 </th>
                                 <th width="12%"><i class="fa fa-gear"></i> Action</th>
                             </tr>
                         </thead>
                         <tbody>
                             {% if entities %}
                                  {% for permission in entities %}
                                  <tr class="odd gradeX">
                                      <td>{{ permission.name }}</td>
                                      <td>
                                       <a href="{{ path('permission_edit', {'id': permission.id}) }}"><i class="fa fa-pencil"></i> Edit</a><br />
                                       <a href="{{ path('permission_delete', {'id': permission.id}) }}" onclick="javascript:return confirm('Do you want to proceed deleting this role?')"><i class="fa fa-trash-o"></i> Delete</a><br />
                                      </td>
                                  </tr>
                                  {% endfor %}
                             {% else %}
                                  <tr class="odd gradeX">
                                      <td colspan="3" align="center">No permissions found</td>
                                  </tr>
                             {% endif %}
                         </tbody>
                     </table>
                 </div>
             </div>
             <!-- /.panel-body -->
         </div>
         <!-- /.panel -->
     </div>
     <!-- /.col-lg-12 -->
  </div>
