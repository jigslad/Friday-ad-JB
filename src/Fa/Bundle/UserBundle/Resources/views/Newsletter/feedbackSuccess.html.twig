{% extends 'FaFrontendBundle::layout.html.twig' %}

{% block body %}
<div class="homepage-row">
    <div class="row">
        <div class="medium-20 medium-push-2 large-18 large-push-3 columns text-center">
            <h1 class="mb20">Thank you for your feedback</h1>
            <h2>
            	Your feedback is recorded anonymously, and will be used to help us improve our emails.
			</h2>
            <div class="medium-10 medium-push-7 large-10 large-push-7 columns mt40 p0 text-center">
                <a href="{{ path('fa_frontend_homepage') }}" class="button expand primary-btn-2">Go to home page</a><br>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block scriptbottom %}
<script language="javascript" type="text/javascript">
//<![CDATA[
	 $(document).ready(function(){
		{% if gaCode is defined and gaCode != '' %}
    		 window.dataLayer.push({
    			 'event': 'unsubscribefeedback',
    			 'unsubreasons': '{{ gaCode|raw }}'
    		 });
    	{% endif %}
	 });
//]]>
</script>
{% endblock %}
