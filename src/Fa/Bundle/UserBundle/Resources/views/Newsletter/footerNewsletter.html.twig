<div class="mb20">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'fa_user_newsletter'}}) }}
                {# <div class="d-none d-md-block mb20"><button class="primary-btn-1 btn btn-block">Place An Ad</button></div>
                <div class="newsletter-head"><label class="footer-head">Subscribe to our newsletter</label></div> #}
                <div class="mb20 newsletter-head"><span class="newsletter-icon list-icons" style=""></span><label class="footer-head">Subscribe to our <br> newsletter</label></div>
                <div class="search-box-col">
                   <div class="clearfix">
                       <div class="newsletter-search-box">
                            {{ form_widget(form.email,  { 'attr': {'class': 'newsletter-email-txt', "autocomplete": "off"} }) }}
                       </div>
                    </div>
                    {{ form_errors(form) }}
                    <div class="white-check mt0 mb0" style="display: inline-flex;">
                        {{ form_widget(form.email_alert, {'attr': {'class': 'checkbox'}}) }}
                        <label for="{{ form.email_alert.vars.id }}"></label><span class="newsletter-lbl">{{ form.email_alert.vars.label }}</span>
                    </div>
                    <div class="clearfix"></div>
                    <div class="white-check mt0 mb0 third-party-email-subscription" style="display: inline-flex;">
                        {{ form_widget(form.third_party_email_alert, {'attr': {'class': 'checkbox'}}) }}
                        <label for="{{ form.third_party_email_alert.vars.id }}"></label><span class="newsletter-lbl">{{ form.third_party_email_alert.vars.label }}</span>
                    </div>
                    <div class="clearfix">
                       <div class="" style="display: inline-flex;">
                            {{ form_widget(form.save,{'attr':{'class':'secondary-btn-1 btn' }}) }}
                        </div>
                    </div>
                    <div class="clearfix">
                       <div class="footer-newsletter-info-box">
                            <p>You can easily tailor or unsubscribe from our newsletters at any time by clicking on the links at the bottom of each of our emails. You can also update your preferences and personal information at any time.</p>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        
