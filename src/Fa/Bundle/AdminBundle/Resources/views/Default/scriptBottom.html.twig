<script language="javascript" type="text/javascript">
    $('#admin_header_logout, #admin_header_index_logout').on('click', function() {
        if (!!$.cookie('amazon_Login_accessToken')) {
            amazon.Login.logout();
            document.cookie = "amazon_Login_accessToken=; expires=Thu, 01 Jan 1970 00:00:00 GMT";
            $("#AmazonPayButton").show();
            $("#addressBookWidgetDiv").hide();
            $("#walletWidgetDiv").hide();
            $("#access-token").val("");
            $("#order-reference").val("");
        }
    });
</script>
<script language="javascript" type="text/javascript">
//<![CDATA[
    $.ajax({
      url: '{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}',
      async: false,
      dataType: "script",
    });
    //bindFormErrorEvents();
    $('.fdatepicker').fdatepicker({format: 'dd/mm/yyyy'});
    $('.datepicker-icon').click(function(e){
        $(this).next('input.fdatepicker').focus();
    });
    function ajaxindicatorstart(text)
    {
        if($('body').find('#resultLoading').attr('id') != 'resultLoading'){
            $('body').append('<div id="resultLoading" style="display:none"><div><img src="{{ asset_url('faadmin/images/ajax_spinner.gif') }}"><div>'+text+'</div></div></div>');
        }
    
        $('#resultLoading').css({
            'width':'100%',
            'height':'100%',
            'position':'fixed',
            'z-index':'10000000',
            'top':'0',
            'left':'0',
            'right':'0',
            'bottom':'0',
            'margin':'auto',
        });
    
        $('#resultLoading>div:first').css({
            'width': '250px',
            'height':'75px',
            'text-align': 'center',
            'position': 'fixed',
            'top':'0',
            'left':'0',
            'right':'0',
            'bottom':'0',
            'margin':'auto',
            'font-size':'16px',
            'z-index':'10',
            'color':'#000000',
            'background':'#ffffff',
            'border-radius':'0.6em',
            'border':'1px solid #d0d0d0',
            'box-shadow': '0 1px 1px -1px #ffffff',
            'padding': '10px'
        });
    
        $('#resultLoading .bg').height('100%');
           $('#resultLoading').fadeIn(300);
        $('body').css('cursor', 'wait');
    }
    
    function ajaxindicatorstop()
    {
        $('#resultLoading .bg').height('100%');
           $('#resultLoading').fadeOut(300);
        $('body').css('cursor', 'default');
    }
    
    // remove empty left menus
    $( document ).ready(function() {
        $("ul.off-canvas-list > li").each(function() {
            if ($(this).find('ul:first').length == 0) {
                $(this).remove();
            }
        });
    });
//]]>
</script>